<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <ImageView
        android:id="@+id/book_dialog_image"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/book_dialog_image_descriptor"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/no_picture" />

    <TextView
        android:id="@+id/book_dialog_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_dialog_image"
        android:layout_centerHorizontal="true"
        android:padding="15dp" />

    <TextView
        android:id="@+id/book_dialog_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_dialog_description"
        android:layout_centerHorizontal="true"
        android:padding="15dp" />

    <Button
        android:id="@+id/book_dialog_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_dialog_price"
        android:padding="5dp"
        android:text="@string/book_dialog_button" />

</RelativeLayout>