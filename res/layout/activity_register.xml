<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="?attr/actionBarSize"
    tools:context="de.tum.asp.sharenow.app.RegisterActivity" >

    <TextView
        android:id="@+id/register_mail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/register_mail" />

    <EditText
        android:id="@+id/register_mail_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_mail_text"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:text="jd@example.com" />

    <TextView
        android:id="@+id/register_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_mail_input"
        android:paddingTop="10dp"
        android:text="@string/register_password" />

    <EditText
        android:id="@+id/register_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_password_text"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:text="hallo" />

    <TextView
        android:id="@+id/register_firstName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_password_input"
        android:paddingTop="10dp"
        android:text="@string/register_firstName" />

    <EditText
        android:id="@+id/register_firstName_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_firstName_text"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName|textCapWords"
        android:text="John" />

    <TextView
        android:id="@+id/register_lastName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_firstName_input"
        android:paddingTop="10dp"
        android:text="@string/register_lastName" />

    <EditText
        android:id="@+id/register_lastName_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_lastName_text"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName|textCapWords"
        android:text="Doe" />

    <Button
        android:id="@+id/register_register_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_lastName_input"
        android:layout_centerHorizontal="true"
        android:onClick="register"
        android:text="@string/register_register_button" />

</RelativeLayout>